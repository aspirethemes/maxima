{{!< default}}

{{#post}}

<div class='o-wrapper'>
  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--full'>
      <div class='c-tag'>
        <h4 class='c-tag__name'>{{ title }}</h4>
      </div>
    </div>
  </div>

  <div class='o-grid'>
    {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
      {{#foreach tags}}
        {{> tag-card }}
      {{/foreach}}
    {{/get}}
  </div>
</div>

{{/post}}
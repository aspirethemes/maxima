{{!< ../default}}

<div class='o-wrapper'>
  {{#if @member.paid}}
    {{!-- Logged in, paying member: Redirect home --}}
    <script>window.location = '{{@site.url}}';</script>
  {{else if @member}}
    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--2-4-m o-grid__col--center'>
        <div class='c-archive'>
          <h2 class='c-archive__name'>{{t 'Choose your subscription'}}</h2>
          <p class='c-archive__description'>{{t 'Unlock full access to {siteTitle} and see the entire library of members-only content & updates.' siteTitle=@site.title}}</p>
        </div>
      </div>
    </div>

    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--3-4-l'>
        {{> signup-plans }}
      </div>
    </div>

  {{else}}
  {{!-- Not logged in: Sign up --}}
    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--2-4-m o-grid__col--center'>
        <div class='c-archive'>
          <h2 class='c-archive__name'>{{t 'Subscribe to {siteTitle}' siteTitle=@site.title}}</h2>
          <p class='c-archive__description'>{{t 'Get access to premium content.'}}</p>
        </div>
      </div>
    </div>

    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--2-4-l'>
        <div class="box box--news-letter subscribe-form">
          <form data-members-form='signup' class='subscribe-form'>
            <div class='form-group'>
              <label for='subscribe-email-signup' class='u-hidden-visually'>{{t 'Email' }}</label>
              <input type='email' id='subscribe-email-signup' placeholder='{{t 'Email' }}' data-members-email>
              <button type='submit' class='c-btn'>{{t 'Continue' }}</button>
            </div>

            <div class='u-alert u-alert--success u-mt-8'>{{t 'Please check your inbox and click the link to confirm your subscription.' }}</div>
            <div class='u-alert u-alert--invalid u-mt-8'>{{t 'Please enter a valid email address!' }}</div>
            <div class='u-alert u-alert--error u-mt-8'>{{t 'An error occurred, please try again later.' }}</div>
          </form>
        </div>

        <p class='u-font-small u-mt-8'>{{t 'Already have an account?' }} <a href='/signin/' class='u-link'>{{t 'Log In' }}</a></p>
      </div>
    </div>
  {{/if}}
</div>
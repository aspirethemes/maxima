{{!< ../default}}

<div class='o-wrapper'>
  {{#if @member}}
    {{!-- Logged in: Redirect home --}}
    <script>window.location = '{{@site.url}}';</script>
  {{else}}
    {{!-- Not logged in: Signin form --}}
    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--2-4-m o-grid__col--center'>
        <div class='c-archive'>
          <h2 class='c-archive__name'>{{t 'Welcome back!'}}</h4>
          <p class='c-archive__description'>{{t 'Log Into your account again.'}}</p>
        </div>
      </div>
    </div>

    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--2-4-l'>
        <div class="box box--news-letter subscribe-form">
          <form data-members-form='signin' class='subscribe-form'>
            <div class='form-group'>
              <label for='subscribe-email-signin' class='u-hidden-visually'>{{t 'Email' }}</label>
              <input type='email' id='subscribe-email-signin' placeholder='{{t 'Email' }}' data-members-email>
              <button type='submit' class='c-btn'>{{t 'Send login link' }}</button>
            </div>

            <div class='u-alert u-alert--success u-mt-8'>{{t 'Please check your inbox and click the link to complete the login.' }}</div>
            <div class='u-alert u-alert--invalid u-mt-8'>{{t 'Please enter a valid email address!' }}</div>
            <div class='u-alert u-alert--error u-mt-8'>{{t 'An error occurred, please try again later.' }}</div>
          </form>
        </div>

        <p class='u-font-small u-mt-8'>{{t "Don't have an account yet?"}} <a href='{{ @site.url }}/signup/' class='u-link'>{{t 'Subscribe'}}</a></p>
      </div>
    </div>
  {{/if}}
</div>
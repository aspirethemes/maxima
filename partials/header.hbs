<header class='c-header'>

  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--full'>
      <div class='c-header__inner'>

        <div class='o-grid'>
          <div class='o-grid__col o-grid__col--1-4-s'>
            <div class='js-off-canvas-toggle c-off-canvas-toggle'>
              <span class='c-off-canvas-toggle__icon'></span>
            </div>
          </div>

          <div class='o-grid__col o-grid__col--2-4-s'>
            <div class='c-logo u-text-center'>
              {{#if @site.logo}}
                <a href='{{ @site.url }}'>
                  <img class='c-logo__img' src='{{ @site.logo }}' alt='{{ @site.title }}'>
                </a>
              {{else}}
                <a class='c-logo__link' href='{{ @site.url }}'>{{ @site.title }}</a>
              {{/if}}
            </div>
          </div>

          <div class='o-grid__col o-grid__col--1-4-s'>
            <div class='u-text-right'>
              <a class='toggle-search-button js-search-toggle' href='#' aria-label='Search'>
                <span class='c-header__icon' data-icon='ei-search' data-size='s'></span>
              </a>
            </div>
            <div class='c-off-canvas-content js-off-canvas-content'>
              <div class='js-off-canvas-toggle c-off-canvas-toggle c-off-canvas-toggle--close'>
                <span class='c-off-canvas-toggle__icon'></span>
              </div>

              <ul class='c-nav o-plain-list '>
                {{ navigation }}
                {{#if @labs.members}}
                  {{#if @member}}
                    <li class='c-nav__item'><a href='/account/' class='c-nav__link'>{{t 'Account' }}</a></li>
                    <li class='c-nav__item'><a href='#signout' class='c-nav__link' data-members-signout>{{t 'Log Out' }}</a></li>
                  {{else}}
                    <li class='c-nav__item'><a href='/signin/' class='c-nav__link'>{{t 'Log In' }}</a></li>
                    <li class='c-nav__item'><a href='/signup/' class='c-nav__link u-font-bold'>{{t 'Sign Up' }}</a></li>
                  {{/if}}
                {{/if}}
              </ul>

              {{#if @site.description}}
                <p class='c-blog-desc'>{{@site.description}}</p>
              {{/if}}
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

</header>

{{> search-form }}